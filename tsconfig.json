{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",                         // Output directory for compiled JavaScript files
    "rootDir": "./src",                          // Root directory of TypeScript source files
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "sourceMap": true
  },
  "include": ["src"],                            // Include the source directory for compilation
  "exclude": ["node_modules", "build"]           // Exclude node_modules and build directory
}
